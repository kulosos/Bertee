<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.WorkTimeFragment"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textColor="#666666"
            android:textIsSelectable="true"
            android:textSize="60sp"
            android:autoText="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="#EEEEEE"
            android:id="@+id/btn_getin_container">
            <TextView
                android:id="@+id/txtview_getin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/btn_worktime_getin"
                android:contentDescription="@string/btn_worktime_getin" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/txtview_getin"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:src="@drawable/ic_getin"
                android:contentDescription="@string/btn_worktime_getin" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="#EEEEEE"
            android:id="@+id/btn_getout_container">
            <TextView
                android:id="@+id/txtview_getout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/btn_worktime_getout"
                android:contentDescription="@string/btn_worktime_getout" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/txtview_getout"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:src="@drawable/ic_getout"
                android:contentDescription="@string/btn_worktime_getout" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
